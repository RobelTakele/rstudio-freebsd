set -e

# install dir
INSTALL_DIR=`pwd`

download()
{
  case $(command -v curl || command -v fetch || command -v wget) in
    *curl)  curl -LO https://s3.amazonaws.com/rstudio-buildtools/$1 ;;
    *fetch) fetch https://s3.amazonaws.com/rstudio-buildtools/$1 ;;
    *wget)  wget -O $1 https://s3.amazonaws.com/rstudio-buildtools/$1 ;;
    *)      echo 'ERROR: need curl, fetch, or wget' 1>&2; exit 1 ;;
  esac
}

# target directory for gwt
GWT_DIR=$INSTALL_DIR/../../src/gwt

# lib dir
LIB_DIR=$GWT_DIR/lib
mkdir -p $LIB_DIR

# gin
GIN_VER=1.5
GIN=gin-$GIN_VER
GIN_ZIP=$GIN.zip
if [ -d "$LIB_DIR/gin/$GIN_VER" ]
then
   echo "$GIN_ZIP already installed"
else
   download $GIN_ZIP
   mkdir -p "$LIB_DIR/gin/$GIN_VER"
   unzip -qd "$LIB_DIR/gin/$GIN_VER" "$GIN_ZIP"
   rm $GIN_ZIP
fi

# gwt sdk
GWT_SDK_VER=2.5.1
GWT_SDK=gwt-$GWT_SDK_VER
GWT_SDK_ZIP=gwt-2.5.1.zip
if [ -d "$LIB_DIR/gwt/$GWT_SDK_VER" ]
then
   echo "$GWT_SDK_ZIP already installed"
else
   download $GWT_SDK_ZIP
   mkdir -p "$LIB_DIR/gwt"
   unzip -qd "$LIB_DIR" "$GWT_SDK_ZIP"
   mv "$LIB_DIR/$GWT_SDK" "$LIB_DIR/gwt/$GWT_SDK_VER"
   rm $GWT_SDK_ZIP
fi

JUNIT_JAR=junit-4.9b3.jar
if [ -f "$LIB_DIR/$JUNIT_JAR" ]
then
    echo "$JUNIT_JAR already installed"
else
    download "$JUNIT_JAR"
    mv "$JUNIT_JAR" "$LIB_DIR/$JUNIT_JAR"
fi
# back to install dir
cd $INSTALL_DIR
